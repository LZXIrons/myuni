.poup {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}
.poup .mask {
    position: fixed;
    height: inherit;
    width: inherit;
    z-index: 99;
    background: rgba(1, 1, 1, 0.3);
    -webkit-animation: maskMove .2s linear;
            animation: maskMove .2s linear;
}
.poup .con {
    position: fixed;
    z-index: 999;
    width: inherit;
    bottom: 0;
    padding: 20rpx 30rpx;
    background-color: #f3f3f3;
    -webkit-animation: conMove .2s linear;
            animation: conMove .2s linear;
}
